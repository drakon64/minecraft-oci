module my-tmux 1.0;

require {
	type devpts_t;
	type init_t;
	type ptmx_t;
	type tmp_t;
	class chr_file { ioctl open read write };
	class sock_file { create setattr unlink write };
}

#============= init_t ==============
allow init_t devpts_t:chr_file open;
allow init_t ptmx_t:chr_file { ioctl open read write };
allow init_t tmp_t:sock_file { create setattr unlink write };
