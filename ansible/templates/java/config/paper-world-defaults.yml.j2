# Website: https://papermc.io/
{% set combined_paper = paper.world_defaults %}
{% if global_overrides.paper.world_defaults is defined %}
{% set combined_paper = (combined_paper | combine(global_overrides.paper.world_defaults, recursive=True)) %}
{% endif %}
{% if node_overrides.paper.world_defaults is defined %}
{% set combined_paper = (combined_paper | combine(node_overrides.paper.world_defaults, recursive=True)) %}
{% endif %}
{% if outer_item.paper.world_defaults is defined %}
{% set combined_paper = (combined_paper | combine(outer_item.paper.world_defaults, recursive=True)) %}
{% endif %}

