#!/bin/sh -e

mkdir -p /run/minecraft
sudo -u minecraft tmux new-session -s minecraft-{{ outer_item.name }} -d '{{ command }}'
sleep 1
sudo -u minecraft tmux list-panes -a -F "#{session_name} #{pane_pid}" | grep minecraft-{{ outer_item.name }} | awk '{ print $2 }' > /run/minecraft/{{ outer_item.name }}
sleep 1
