[Unit]
Description={{ item.description }} Monitor
After=network.target

[Service]
Type={{ item.type }}
ExecStart=/opt/minecraft/{{ item.execstart }}
{%if item.restart is defined %}Restart={{ item.restart }}{% endif %}
WorkingDirectory=/opt/minecraft

{%if item.user is defined %}
User={{ item.user }}
Group={{ item.user }}
{% endif %}

[Install]
WantedBy=multi-user.target
