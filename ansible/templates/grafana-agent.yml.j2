integrations:
  node_exporter:
    enabled: true
    relabel_configs:
      - replacement: {{ inventory_hostname }}
        source_labels:
          - __address__
        target_label: instance
  prometheus_remote_write:
    - basic_auth:
        password: {{ grafana.api_key }}
        username: {{ grafana.prometheus.username }}
      url: {{ grafana.prometheus.url }}/push
logs:
  configs:
    - clients:
        - basic_auth:
            password: {{ grafana.api_key }}
            username: {{ grafana.loki.username }}
          url: {{ grafana.loki.url }}
      name: integrations
      positions:
        filename: /tmp/positions.yaml
      scrape_configs:
        - job_name: integrations/node_exporter_direct_scrape
          static_configs:
            - labels:
                __path__: /var/log/{syslog,messages,*.log}
                instance: {{ inventory_hostname }}
                job: integrations/node_exporter
              targets:
                - localhost
        - job_name: integrations/node_exporter_journal_scrape
          journal:
            labels:
              instance: {{ inventory_hostname }}
              job: integrations/node_exporter
            max_age: 24h
          relabel_configs:
            - source_labels:
                - __journal__systemd_unit
              target_label: unit
            - source_labels:
                - __journal__boot_id
              target_label: boot_id
            - source_labels:
                - __journal__transport
              target_label: transport
      target_config:
        sync_period: 10s
metrics:
  configs:
    - host_filter: false
      name: minecraft
      remote_write:
        - basic_auth:
            password: {{ grafana.api_key }}
            username: {{ grafana.prometheus.username }}
          url: {{ grafana.prometheus.url }}/push
      scrape_configs:
{% for i in instances if i.state.enabled %}
{% if i.plugins.unifiedmetrics.driver.prometheus.http.port is defined %}
{% set unifiedmetrics_port = i.plugins.unifiedmetrics.driver.prometheus.http.port %}
{% elif node_overrides.unifiedmetrics.driver.prometheus.http.port is defined %}
{% set unifiedmetrics_port = node_overrides.unifiedmetrics.driver.prometheus.http.port %}
{% elif global_overrides.unifiedmetrics.driver.prometheus.http.port is defined %}
{% set unifiedmetrics_port = global_overrides.unifiedmetrics.driver.prometheus.http.port %}
{% else %}
{% set unifiedmetrics_port = unifiedmetrics.driver.prometheus.http.port %}
{% endif %}
        - job_name: {{ i.name }}
          static_configs:
            - targets: ["127.0.0.1:{{ unifiedmetrics_port }}"]
{% endfor %}
  global:
    scrape_interval: 15s
  wal_directory: /tmp/grafana-agent-wal
server:
  http_listen_port: 12345
